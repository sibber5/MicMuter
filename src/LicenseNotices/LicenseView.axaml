<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:MicMuter.LicenseNotices"
        xmlns:controls="using:MicMuter.LicenseNotices"
        x:DataType="local:LicenseView">
    <Design.PreviewWith>
        <controls:LicenseView />
    </Design.PreviewWith>
    
    <Styles.Resources>
        <local:LicenseTextMultiConverter x:Key="LicenseTextMultiConverter" />
    </Styles.Resources>
    
    <Style Selector="controls|LicenseView">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="#14FFFFFF"
                        CornerRadius="5"
                        Padding="15,5,15,15">
                    <StackPanel Spacing="10">
                        
                        <StackPanel Orientation="Horizontal">
                            <HyperlinkButton Content="{TemplateBinding PackageId}" NavigateUri="{TemplateBinding ProjectUrl}" />
                            <TextBlock Text="{TemplateBinding PackageVersion}" VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,-10,0,0">
                            <TextBlock Text="by" VerticalAlignment="Center" />
                            <TextBlock Text="{TemplateBinding Author}" VerticalAlignment="Center" />
                        </StackPanel>
                        
                        <ScrollViewer MaxHeight="100">
                            <TextBlock TextWrapping="Wrap">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource LicenseTextMultiConverter}">
                                        <Binding Path="License" RelativeSource="{RelativeSource TemplatedParent}" />
                                        <Binding Path="Year" RelativeSource="{RelativeSource TemplatedParent}" />
                                        <Binding Path="CopyrightHolders" RelativeSource="{RelativeSource TemplatedParent}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </ScrollViewer>
                        
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
